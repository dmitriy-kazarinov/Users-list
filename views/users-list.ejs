<% include partials/header.ejs %>
<% include partials/nav.ejs %>
    <table class="table table-striped table-hover">
        <tr>
            <td><strong>#</strong></td>
            <td><strong>Name</strong></td>
            <td><strong>Type</strong></td>
            <td><strong>Age</strong></td>
        </tr>
        <%for(var i = 0, allUsers = users.length; i < allUsers; i ++){%>
            <tr>
                <td><%= i+1 %></td>
                <td><strong class="link-to"><%- link_to(users[i].name, 'user/' + users[i]._id) %> <button class="del-data btn btn-raised btn-danger btn-xs">delete user</button></strong></td>
                <td><%= users[i].type %></td>
                <td><%= users[i].age %></td>
            </tr>
        <%}%>

    </table>

    <button class="add-data btn btn-raised btn-info">Add User</button>

    <form class="data-user f-hide">
        <div class="form-group label-floating">
            <label class="control-label" for="focusedInput1">Write name</label>
            <input class="form-control" name="name" id="focusedInput1" type="text">
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="focusedInput2">Write type</label>
            <input class="form-control" name="type" id="focusedInput2" type="text">
        </div>
        <div class="form-group label-floating">
            <label class="control-label" for="focusedInput3">Write age</label>
            <input class="form-control" name="age" id="focusedInput3" type="text">
        </div>
        <button type="submit" class="btn btn-raised btn-success">Send</button>
    </form>
<% include partials/footer.ejs %>